<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

  <t t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">

    <!-- Reemplaza TODA la linea "qty x unitPrice / unit" -->
    <xpath expr="//li[contains(@class,'price-per-unit')]" position="replace">
      <li class="price-per-unit">
        <span class="qty px-1 border rounded text-bg-view fw-bolder me-1" t-esc="line.qty"/>
        <t t-if="line.unit">
          <span class="ms-1" t-esc="line.unit"/>
        </t>
      </li>
    </xpath>

  </t>

</templates>
